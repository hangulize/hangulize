lang:
    id      = "vie"
    codes   = "vi", "vie"
    english = "Vietnamese"
    korean  = "베트남어"
    script  = "latin"

config:
    author = "Brian Jongseong Park <iceager@gmail.com>"
    stage  = "draft"

macros:
    "@" = "<vowels>"

vars:
    "vowels" = "a", "A", "e", "E", "i", "o", "O", "u", "U", "y"

normalize:
    "ơ" = "ỡ", "Ơ", "ợ", "Ợ", "Ỡ", "ớ", "Ớ", "ờ", "Ờ", "ở", "Ở"
    "ă" = "Ă", "ắ", "Ắ", "ằ", "Ằ", "ẳ", "Ẳ", "ẵ", "Ẵ", "ặ", "Ặ"
    "â" = "Â", "ấ", "Ấ", "ầ", "Ầ", "ẩ", "Ẩ", "ẫ", "Ẫ", "ậ", "Ậ"
    "ê" = "ề", "Ề", "ể", "Ể", "ễ", "Ễ", "ệ", "Ệ", "Ê", "ế", "Ế"
    "đ" = "Đ"
    "ư" = "ứ", "Ứ", "ừ", "Ừ", "ử", "Ử", "Ư", "Ữ", "ự", "Ự", "ữ"

rewrite:
    "ă"          -> "A"
    "â"          -> "O"
    "đ"          -> "D"
    "ê"          -> "E"
    "ơ"          -> "O"
    "ư"          -> "U"
    "ch"         -> "C"
    "c"          -> "k"
    "j"          -> "d"
    "kh{@}"      -> "K"
    "ngh{e|E|i}" -> "N"
    "ng"         -> "N"
    "nh{@}"      -> "nY"
    "anh"        -> "ain"
    "nh"         -> "n"
    "gi"         -> "d"
    "gh"         -> "g"
    "ph{@}"      -> "f"
    "qua"        -> "kWa"
    "q"          -> "k"
    "th{@}"      -> "T"
    "tr"         -> "C"
    "dz{@}"      -> "d"
    "z{@}"       -> "d"
    "ia"         -> "iO"
    "ya"         -> "yO"
    "ua"         -> "uO"
    "Ua"         -> "UO"
    "A"          -> "a"
    "y{@}"       -> "Y"
    "y"          -> "i"
    "C{@}"       -> "XC"
    "{@}C"       -> "CX"
    "^k"         -> "Xk"
    "k{@|l|r|W}" -> "Xk"
    "{@}k"       -> "kX"
    "m{@}"       -> "Xm"
    "{@}m"       -> "mX"
    "n{@|Y}"     -> "Xn"
