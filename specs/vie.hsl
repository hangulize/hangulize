    "^l"      -> "ㄹ"
    "{X}l{@}" -> "ㄹ"
    "l{@}"    -> "-ㄹㄹ"
    "l"       -> "-ㄹ"
    "b"       -> "ㅂ"
    "XC"      -> "ㅉ"
    "CX"      -> "-ㄱ"
    "C"       -> "ㅉ"
    "d"       -> "ㅈ"
    "D"       -> "ㄷ"
    "f"       -> "ㅍ"
    "g"       -> "ㄱ"
    "h{@}"    -> "ㅎ"
    "Xk"      -> "ㄲ"
    "kX"      -> "-ㄱ"
    "k"       -> "ㄲ"
